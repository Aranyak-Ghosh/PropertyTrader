<?xml version="1.0" encoding="UTF-8" ?>
<faces-config version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <managed-bean>
        <managed-bean-class>
            util2.Singleton.java
        </managed-bean-class>
        <managed-bean-name>singleton</managed-bean-name>
        <managed-bean-scope>application</managed-bean-scope>
        <managed-property>
            <property-name>DB</property-name>
            <value>Your DB URL</value>
        </managed-property>
        <managed-property>
            <property-name>user</property-name>
            <value>DB Username</value>
        </managed-property>
        <managed-property>
            <property-name>pass</property-name>
            <value>DB Password</value>
        </managed-property>
    </managed-bean>
</faces-config>